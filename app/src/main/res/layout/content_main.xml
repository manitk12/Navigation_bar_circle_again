<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/new_grey"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@color/new_grey"
        android:id="@+id/view"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:gravity="center_horizontal"

            >

            <android.support.v7.widget.CardView
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:cardBackgroundColor="@color/light_blue1"
                app:cardCornerRadius="16sp"
                android:layout_marginEnd="20dp"
                >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"

                    />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:cardBackgroundColor="@color/light_blue1"
                app:cardCornerRadius="16sp"
                android:layout_marginEnd="20dp"
                >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"

                    />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:cardBackgroundColor="@color/light_blue1"
                app:cardCornerRadius="16sp"
                android:layout_marginEnd="20dp"
                >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"

                    />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:cardBackgroundColor="@color/light_blue1"
                app:cardCornerRadius="16sp"
                android:layout_marginEnd="20dp"
                >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"

                    />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:cardBackgroundColor="@color/light_blue1"
                app:cardCornerRadius="16sp"
                >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"

                    />
            </android.support.v7.widget.CardView>



        </LinearLayout>


        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/piechart"
            android:layout_width="match_parent"
            android:layout_height="270dp"

            >



        </com.github.mikephil.charting.charts.PieChart>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/setting_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="15dp"


                />

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >


                <ImageView
                    android:id="@+id/arrow_image"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center_horizontal|bottom"

                    />

            </FrameLayout>

            <ImageView
                android:id="@+id/calender_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="15dp"
                />




        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/new_white"




            >

            <android.support.v7.widget.CardView
                android:id="@+id/card_view_photo_image"
                android:layout_width="15dp"
                android:layout_height="15dp"
                app:cardCornerRadius="9dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                app:cardBackgroundColor="@color/dark_pink"




                >

                <ImageView

                    android:layout_width="30dp"
                    android:layout_height="30dp" />

            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/photo_text_view"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:text="incoming calls"
                android:gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:textColor="@color/new_grey"
                android:textAllCaps="true"
                android:layout_alignTop="@+id/card_view_photo_image"
                android:layout_alignBottom="@+id/card_view_photo_image"
                android:layout_toEndOf="@+id/card_view_photo_image"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="223"
                android:textColor="@color/dark_pink"
                android:layout_toEndOf="@+id/photo_text_view"
                android:layout_alignTop="@+id/photo_text_view"
                android:layout_alignBottom="@+id/photo_text_view"
                android:gravity="center_vertical"
                />



            <android.support.v7.widget.CardView
                android:id="@+id/card_view_photo_image2"
                android:layout_width="15dp"
                android:layout_height="15dp"
                app:cardCornerRadius="9dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                app:cardBackgroundColor="@color/colorAccent"
                android:layout_below="@+id/card_view_photo_image"


                >

                <ImageView

                    android:layout_width="30dp"
                    android:layout_height="30dp" />

            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/photo_text_view2"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:text="outgoing calls"
                android:textAllCaps="true"
                android:gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:textColor="@color/new_grey"
                android:layout_alignTop="@+id/card_view_photo_image2"
                android:layout_alignBottom="@+id/card_view_photo_image2"
                android:layout_toEndOf="@+id/card_view_photo_image2"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="405"
                android:textColor="@color/colorAccent"
                android:layout_toEndOf="@+id/photo_text_view2"
                android:layout_alignTop="@+id/photo_text_view2"
                android:layout_alignBottom="@+id/photo_text_view2"
                android:gravity="center_vertical"
               />

            <android.support.v7.widget.CardView
                android:id="@+id/card_view_photo_image3"
                android:layout_width="15dp"
                android:layout_height="15dp"
                app:cardCornerRadius="9dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                app:cardBackgroundColor="@color/light_blue1"
                android:layout_below="@+id/card_view_photo_image2"
                android:layout_marginBottom="50dp"


                >

                <ImageView

                    android:layout_width="30dp"
                    android:layout_height="30dp" />

            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/photo_text_view3"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:text="clipboard"
                android:gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:textColor="@color/new_grey"
                android:textAllCaps="true"
                android:layout_alignTop="@+id/card_view_photo_image3"
                android:layout_alignBottom="@+id/card_view_photo_image3"
                android:layout_toEndOf="@+id/card_view_photo_image3"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21"
                android:layout_toEndOf="@+id/photo_text_view3"
                android:layout_alignTop="@+id/photo_text_view3"
                android:layout_alignBottom="@+id/photo_text_view3"
                android:gravity="center_vertical"
                android:textColor="@color/light_blue1"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_below="@+id/card_view_photo_image3"
                android:background="@color/light_blue1"/>




        </RelativeLayout>




    </LinearLayout>






</ScrollView>
